<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragment_ptz_analyzer_control"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PtzAnalyzerControlFragment"
    android:gravity="center"
    android:paddingStart="@dimen/ptz_settings_padding"
    android:paddingEnd="0dp">

    <TextView
        android:id="@+id/key_baudrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:drawableStart="@drawable/ic_up_down"
        android:drawablePadding="@dimen/ptz_control_padding"
        android:text="@string/label_baudrate"
        android:layout_weight="4"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/key_protocol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:drawableStart="@drawable/ic_left_right"
        android:drawablePadding="@dimen/ptz_control_padding"
        android:text="@string/label_protocol"
        android:layout_weight="4"
        android:textStyle="bold" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_set"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_weight="0"
        android:gravity="end"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/key_clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/key_clear"
        android:gravity="center"
        android:background="@drawable/btn_rounded_selector"
        android:paddingTop="@dimen/ptz_control_padding"
        android:paddingBottom="@dimen/ptz_control_padding"
        android:textStyle="bold"
        android:layout_weight="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_prev"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_weight="0"
        android:gravity="end"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/key_exit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/key_exit"
        android:gravity="center"
        android:background="@drawable/btn_rounded_selector"
        android:paddingTop="@dimen/ptz_control_padding"
        android:paddingBottom="@dimen/ptz_control_padding"
        android:textStyle="bold"
        android:layout_weight="3" />

</LinearLayout>
